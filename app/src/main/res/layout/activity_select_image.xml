<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SelectImage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/toplogo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="keyword"
        android:layout_marginTop="20dp"
        android:id="@+id/word"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="@font/kyobo"
        android:textSize="30dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imgTranslate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/basicimage"/>

    <Button
        android:id="@+id/btn_down"
        android:text="그림 생성하기"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/selector_button"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/kyobo"/>
    <Button
        android:id="@+id/btn_random"
        android:text="랜덤으로 보기"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/kyobo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_no"
            android:text="돌아가기"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/selector_button_white"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/kyobo"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btn_sel"
            android:text="저장하기"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/selector_button_white"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/kyobo"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_no2"
        android:text="돌아가기"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="@drawable/selector_button_white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/kyobo"/>


</LinearLayout>